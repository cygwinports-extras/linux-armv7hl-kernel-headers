CROSS_HOST="armv7hl-unknown-linux-gnueabi"
ORIG_PN="linux"
inherit cross

DESCRIPTION="Kernel headers for Linux armv7hl toolchain"
HOMEPAGE="http://www.kernel.org/"
SRC_URI="http://www.kernel.org/pub/linux/kernel/v3.x/linux-${PV}.tar.xz"

src_compile() { :; }

src_install() {
	cd ${S}
	cygmake headers_install INSTALL_HDR_PATH=${D}${CROSS_PREFIX} \
		ARCH=arm CROSS_COMPILE=${CROSS_HOST}- O=${B}
	find ${D} -name '*.install*' -delete
}
